---
import { getConnectionFromEnv, getServerEnv } from "@/config/env";
import { getDb } from "@/db";
import { getCasesByTag } from "@/modules/cases/cases.repository";
import { getRootTags } from "@/modules/taxonomy/services";

// --- LÃ“GICA DE CONEXÃƒO ATUALIZADA ---
const runtime = Astro.locals.runtime;
const env = getServerEnv(runtime);
const db = getDb(getConnectionFromEnv(env));
// ---------------------------------

const url = new URL(Astro.request.url);
const activeTagSlug = url.searchParams.get("tag");

const rootTags = await getRootTags(db);

const cases = await getCasesByTag(db, activeTagSlug || undefined);
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>MedSim - Casos ClÃ­nicos</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    
    <!-- Header Simples -->
    <header class="bg-white border-b border-gray-200 py-4 px-6 sticky top-0 z-10">
      <div class="max-w-6xl mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-900 flex items-center gap-2">
          ðŸ©º MedSim
        </a>
      </div>
    </header>

    <div class="flex-1 max-w-6xl mx-auto w-full p-6 grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Sidebar de NavegaÃ§Ã£o (Tags) -->
      <aside class="md:col-span-1 space-y-4">
        <h3 class="font-bold text-gray-500 uppercase text-xs tracking-wider">Especialidades</h3>
        <nav class="flex flex-col space-y-1">
          <a 
            href="/" 
            class={`px-3 py-2 rounded-lg text-sm font-medium ${!activeTagSlug ? 'bg-blue-100 text-blue-800' : 'text-gray-600 hover:bg-gray-100'}`}
          >
            Todos os Casos
          </a>
          {rootTags.map((t) => (
            <a 
              href={`/?tag=${t.slug}`} 
              class={`px-3 py-2 rounded-lg text-sm font-medium ${activeTagSlug === t.slug ? 'bg-blue-100 text-blue-800' : 'text-gray-600 hover:bg-gray-100'}`}
            >
              {t.name}
            </a>
          ))}
        </nav>
      </aside>

      <!-- Lista de Casos -->
      <main class="md:col-span-3 space-y-6">
        <div class="flex items-center justify-between mb-2">
          <h1 class="text-xl font-bold text-gray-800">
            {activeTagSlug ? `Casos de ${activeTagSlug}` : 'Casos Recentes'}
          </h1>
          <span class="text-sm text-gray-500">{cases.length} casos encontrados</span>
        </div>

        {cases.length === 0 ? (
          <div class="text-center py-12 text-gray-500 bg-white rounded-xl border border-dashed">
            Nenhum caso encontrado para esta categoria.
          </div>
        ) : (
          <div class="grid gap-4">
            {cases.map((c) => (
              <a href={`/case/${c.id}?tag=${activeTagSlug || ''}`} class="group block bg-white border border-gray-200 rounded-xl p-5 hover:border-blue-300 hover:shadow-md transition-all">
                <h2 class="text-lg font-bold text-gray-900 group-hover:text-blue-700 mb-2">{c.title}</h2>
                <p class="text-sm text-gray-600 line-clamp-2">{c.description}</p>
                <div class="mt-4 flex items-center text-xs font-medium text-blue-600">
                  Resolver Caso &rarr;
                </div>
              </a>
            ))}
          </div>
        )}
      </main>
    </div>

  </body>
</html>
