---
import LoginButton from "@/components/auth/LoginButton";
import SessionManager from "@/components/study/SessionManager";
import { getDb } from "@/core/db";
import {
	getConnectionFromEnv,
	getPublicClientEnv,
	getServerEnv,
} from "@/core/env";
import Layout from "@/layouts/Layout.astro"; // Importação do novo Layout
import { getAllTagsAsTree } from "@/modules/taxonomy/services";
import { Settings } from "lucide-react"; // Ícone para link de settings
import "katex/dist/katex.min.css";

// --- LÓGICA DE CONEXÃO ---
const runtime = Astro.locals.runtime;
const env = getServerEnv(runtime);
const db = getDb(getConnectionFromEnv(env));
const envForClient = getPublicClientEnv(runtime);
const currentUser = Astro.locals.user;

const treeData = await getAllTagsAsTree(db);
---

<Layout title="MedRounds - Casos Clínicos">
    
    <!-- Header Simples -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 py-4 px-6 sticky top-0 z-10 transition-colors duration-300">
      <div class="max-w-6xl mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-900 dark:text-blue-400 flex items-center gap-2">
          <img src="/favicon.svg" alt="Logo MedRounds" class="w-8 h-8" />
          MedRounds
        </a>
        
        <div class="flex items-center gap-4">
          {currentUser && (
            <a href="/settings" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white transition-colors" title="Configurações">
              <Settings size={20} />
            </a>
          )}
          <LoginButton client:load env={envForClient} userName={currentUser?.email} />
        </div>
      </div>
    </header>

    <div class="flex-1 max-w-6xl mx-auto w-full p-6">
      <SessionManager client:only="react" treeData={treeData} />
    </div>

</Layout>