---
import LoginButton from "@/components/auth/LoginButton";
import SessionManager from "@/components/study/SessionManager";
import { getDb } from "@/core/db";
import {
	getConnectionFromEnv,
	getPublicClientEnv,
	getServerEnv,
} from "@/core/env";
import { getAllTagsAsTree } from "@/modules/taxonomy/services";

// --- L√ìGICA DE CONEX√ÉO ATUALIZADA ---
const runtime = Astro.locals.runtime;
const env = getServerEnv(runtime);
const db = getDb(getConnectionFromEnv(env));
const envForClient = getPublicClientEnv(runtime);
const currentUser = Astro.locals.user;
// ---------------------------------

// Mudan√ßa: Buscamos a √°rvore completa, n√£o apenas as ra√≠zes
const treeData = await getAllTagsAsTree(db);
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>MedRounds - Casos Cl√≠nicos</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    
    <!-- Header Simples -->
    <header class="bg-white border-b border-gray-200 py-4 px-6 sticky top-0 z-10">
      <div class="max-w-6xl mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-900 flex items-center gap-2">
          ü©∫ MedRounds
        </a>
        <LoginButton client:load env={envForClient} userName={currentUser?.email} />
      </div>
    </header>

    <div class="flex-1 max-w-6xl mx-auto w-full p-6">
      {/* Passamos treeData para o novo SessionManager */}
      <SessionManager client:only="react" treeData={treeData} />
    </div>

  </body>
</html>