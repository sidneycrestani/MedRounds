{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": { "noSvgWithoutTitle": "off" },
      "suspicious": {
        "noExplicitAny": "error"
      }
    }
  },
  "files": {
    "ignore": ["dist/**", ".astro/**", "drizzle/**"]
  }
}
